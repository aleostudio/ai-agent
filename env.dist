# App config (127.0.0.1 for localhost, 0.0.0.0 for whole network)
APP_NAME="Simple AI agent"
APP_HOST=0.0.0.0
APP_PORT=9201
API_VERSION="v1"

# Logging
DEBUG=False

# Model config (providers: ollama / deepseek / openai / groq)
PROVIDER="ollama"
DEFAULT_MODEL="llama3.2"
DEFAULT_TEMPERATURE=0.8
DEFAULT_SYSTEM_PROMPT="You are an helpful assistant."

# Ollama config (host.docker.internal on Docker)
OLLAMA_BASE_URL="http://localhost:11434/v1"

# OpenAI
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_API_KEY=""

# Claude
ANTHROPIC_API_KEY=""

# Deepseek
DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"
DEEPSEEK_API_KEY=""

# Groq
GROQ_BASE_URL="https://api.groq.com/openai/v1"
GROQ_API_KEY=""
